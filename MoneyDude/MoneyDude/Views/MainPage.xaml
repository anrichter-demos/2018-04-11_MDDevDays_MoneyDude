<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyDude.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Welcome to Money Dude!" />
        <Button Text="New Account" Command="{Binding NewAccount}" />
        <Button Text="Add Transaction" Command="{Binding AddTransaction}" />
        <Button Text="Open Reports" Command="{Binding OpenReports}" />
    </StackLayout>

</ContentPage>